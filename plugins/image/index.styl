
.editor-wysiwyg .FormCreateContentImage
	display: flex
	gap: 1rem
	flex-direction: column
	section
		display: flex
		align-items: center
		gap: 1rem
		label
			flex-grow: 1
			input, u
				border-color: gainsboro
	figure
		margin: 0px
		padding: 0px
		background-color: gainsboro
		width: 16rem
		height: 11rem
		display: flex
		flex-direction: column
		figcaption
			background-color: white
			margin: 1px
			min-height: 2rem
			padding: 1ex
			box-sizing: border-box
			transition: color .3s
			&:empty
				color:  GrayText
				&:before
					content: attr( data-placeholder )
		label
			display: flex
			align-items: center
			justify-content: center
			flex-grow: 1
			align-self: stretch

		input
			visibility: hidden
			width: 0px
			height: 0px
			position: fixed
			top: -1000
		aside
			display: flex
			flex-direction: column
			align-self: stretch
			flex-grow: 1
			align-items: center
			justify-content: center
			gap: 1rem
			color: white
			cursor: pointer
			position: relative
			svg
				width: 3rem
				height: 3rem
				fill: white